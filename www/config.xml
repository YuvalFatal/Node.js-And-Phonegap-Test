<?xml version="1.0" encoding="UTF-8"?>
<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->	

	<widget	xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "com.phonegap.Tomer"
		version   = "1.0.0">

	
    <!-- Application Name -->
	<name>
		Tomer
	</name>
	
	<!-- Application Description -->
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
	
	<!-- Author Details -->
    <author email="ttalgam@gmail.com" href="https://www.linkedin.com/in/ttalgam">
        TnT
    </author>
	
	<!-- What To Load As First Page -->
    <content src="index.html" />

	<!-- Settings -->
	
    <preference name="DisallowOverscroll" value="true" />
	<preference name="splashscreen" value="res/screen/android/splash.9.png" />
	<preference name="auto-hide-splash-screen" value="false" />
	<preference name="SplashScreenDelay" value="2000" />
	<preference name="orientation" value="portrait" />
	
	<!-- plugins reference: https://build.phonegap.com/plugins/core -->	
	<gap:plugin name="org.apache.cordova.camera" version="0.2.4" />
	<gap:plugin name="org.apache.cordova.contacts" version="0.2.9" />
	<gap:plugin name="org.apache.cordova.geolocation" version="0.3.6" />
	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.6" />
	<gap:plugin name="org.apache.cordova.core.splashscreen" />
	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/contacts"/>
	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	
	<!-- Define app icon for each platform. -->
	<!-- Default -->
    <icon src="icon.png" />

	<!-- Android -->
    <icon src="res/icon/android/icon-36-ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icon/android/icon-48-mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icon/android/icon-72-hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:density="xhdpi" />
	
	<!-- Blackbarry -->
	<icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry" />
    <icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry" gap:state="hover"/>

	<!-- Ios -->
    <icon src="res/icon/ios/icon-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icon/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icon/ios/icon-57-2x.png" gap:platform="ios"  width="114" height="114" />
    <icon src="res/icon/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144" />
	<icon src="res/icon/ios7/Icon-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="res/icon/ios7/icon-60-2x.png" gap:platform="ios" width="120" height="120" />
	<icon src="res/icon/ios7/icon-76-2x.png" gap:platform="ios" width="152" height="152" />

	<!-- Webos -->
    <icon src="res/icon/webos/icon-64.png" gap:platform="webos" />
	
	<!-- Winphone -->
    <icon src="res/icon/windows-phone/icon-48.png" gap:platform="winphone" />
    <icon src="res/icon/windows-phone/icon-173.png" gap:platform="winphone" gap:role="background" />

    <!-- Define app splash screen for each platform. -->
	<!-- Default -->
    <gap:splash src="splash.png" />
	
	<!-- android -->
	<gap:splash src="res/screen/android/splash.9.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="res/screen/android/splash.9.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="res/screen/android/splash.9.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="res/screen/android/splash.9.png" gap:platform="android" gap:density="xhdpi" />

	<access origin="*" />	
</widget>
